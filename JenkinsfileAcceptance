pipeline {
    agent any

    stages {
        stage('Building Docker Image') {
            steps {
                echo 'Docker image'
                sh "docker build -t booking-app:1.0 ."
            }
        }
        stage('Start our docker container') {
            steps {
                echo 'Starting our docker container'
                sh "docker run -it --rm -v ${PWD}:/app -v /app/node_modules -p3001:3000 -e CHOKIDAR_USEPOLLING=true booking-app:1.0"
            }
        }
    }
}
